<%- include('partials/header'); -%>
<h1>SELL YOUR PRODUCTS HERE!</h1>

<form class="" action="/sell" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <p style="font-weight:bold;">
      Book Title
    </p>
    <input type="text" class="form-control" name="booktitle" value="">
  </div>
  <div class="form-group">
    <p style="font-weight:bold;">
      Book Description
    </p>
    <textarea name="bookdescription" class="form-control" rows="8" cols="80"></textarea>
  </div>
  <div class="form-group">
    <p style="font-weight:bold;">
      Book Image
    </p>
    <input type='file' name='image' />
  </div>
  <div class="form-group">
    <p style="font-weight:bold;">
      Book Cost
    </p>
    <input type='number' name='bookcost' />
  </div>
  <div class="form-group">
    <p style="font-weight:bold;">
    Your MailID
    </p>
    <input type="email" name="sellermail">
  </div>

  <button type="submit" class="btn btn-primary" name="button">publish</button>
</form>

<%- include('partials/footer'); -%>
